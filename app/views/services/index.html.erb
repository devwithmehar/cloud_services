<h1 class="display-6 mb-4 mt-5 mx-3" > All Services </h1>

   <%=  form_with(url: search_services_path, method: "get", local:true) do |form|  %>
        <div class="d-flex">
        <%=  text_field_tag(:keywords, nil, class: "form-control me-2", placeholder: "Search for Services") %>
        <%= submit_tag("Search", class: "btn btn-outline-success") %>

        </div>
      <% end %>

<ol class="list-group list-group-flush mt-5">
    <% @services.each do |service| %>
    <li class="list-group-item mb-2"> <%= link_to service.name, service %> is provided by <%= link_to service.cloud.name, service.cloud  %> Cloud <br>
     and the this is of <%= link_to service.type.name, service.type %>  type
     </li>
    <% end %>
</ol>